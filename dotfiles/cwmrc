bind 4-Left ptrmoveleft
bind 4-Right ptrmoveright

bind S4-r restart
bind 4-l lock
bind S4-q quit

mousebind 4-1 window_move
mousebind S4-1 window_resize
moveamount 10

sticky yes

bind M-Tab unmap
