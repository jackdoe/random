#

# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# color defines for zenburn styled i3
set $bl     #000000
set $bg     #9999cc
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #a0afa0
set $tx     #040404
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393
set $og     #ffffff

# set some nice colors      border     background  text
client.focused              $og        $bg         $tx
client.unfocused            $bl        $bl         $ia
client.focused_inactive     $bl        $bl         $ac
client.urgent               $rd        $rd         $tx


font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# start a terminal
bindsym Control+Shift+Return exec xterm

bindsym Control+bracketright exec "xrandr --output eDP1 --mode 1366x768 --output HDMI2 --off"
bindsym Control+bracketleft exec "xrandr --output eDP1 --off --output HDMI2 --mode 1920x1080"

hide_edge_borders both

# start dmenu (a program launcher)
bindsym Control+Shift+r exec dmenu_run

# change focus
bindsym Control+comma focus left
bindsym Control+period focus right
bindsym Control+q fullscreen

# switch to workspace
bindsym Control+1 workspace 1
bindsym Control+2 workspace 2
bindsym Control+3 workspace 3
bindsym Control+4 workspace 4

bindsym Control+6 move container to workspace 1
bindsym Control+7 move container to workspace 2
bindsym Control+8 move container to workspace 3
bindsym Control+9 move container to workspace 4

# exit i3 (logs you out of your X session)
bindsym Control+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

for_window [class="^.*"] border pixel 1
